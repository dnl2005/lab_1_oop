<UserControl x:Class="UI.Views.TwoWayBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
             Style="{StaticResource {x:Type UserControl}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <vm:TwoWayBindingViewModel />
    </UserControl.DataContext>


    <StackPanel Margin="20">
        <TextBlock Text="Двухсторонняя привязка (TwoWay)" FontSize="16" Margin="0,0,0,10" />


        <!-- Прямая TwoWay привязка между элементами -->
        <TextBlock Text="Прямая привязка между элементами" FontWeight="Bold" />
        <TextBox x:Name="DirectTextBox" Width="200" Margin="0,5" />
        <Slider Minimum="0" Maximum="100"
                Value="{Binding ElementName=DirectTextBox, Path=Text, Mode=TwoWay}" />


        <Separator Margin="10" />


        <!-- TwoWay через ViewModel -->
        <TextBlock Text="TwoWay через ViewModel" FontWeight="Bold" />
        <TextBox Width="200"
                 Text="{Binding UserValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Slider Minimum="0" Maximum="100"
                Value="{Binding UserValue, Mode=TwoWay}" />


        <TextBlock Text="{Binding UserValue, StringFormat=Текущее значение: {0}}"
                   Margin="0,5" />


        <Separator Margin="10" />


        <!-- TwoWay с CheckBox -->
        <TextBlock Text="TwoWay с логическим типом" FontWeight="Bold" />
        <CheckBox Foreground="White" Content="Флаг активен" IsChecked="{Binding IsEnabledFlag, Mode=TwoWay}" />
        <TextBlock Text="{Binding IsEnabledFlag, StringFormat=Значение: {0}}" />
    </StackPanel>
</UserControl>
